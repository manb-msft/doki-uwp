<Page
    x:Class="ml.Doki.Views.DonatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBox Text="{Binding CurrentDonationName, Mode=TwoWay}" Header="Your name" />
                <TextBox Text="{Binding CurrentDonationAmount, Mode=TwoWay}" Header="Your pledge" />
                <Button Command="{Binding DonateCommand}">
                    Donate
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
