<Page
    x:Class="ml.Doki.Views.DonationConfirmationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea">
        <Grid>
            <StackPanel>
                <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}"
                           TextAlignment="Center">
                    Thank you for your donation
                </TextBlock>
                <TextBlock Style="{ThemeResource CaptionSubtitleStyle}"
                           TextAlignment="Center">
                    Stay awesome
                </TextBlock>
                <Image Source="/Assets/Objects/Beers.png"
                       Height="200" VerticalAlignment="Center"
                       Margin="{StaticResource MediumTopBottomMargin}"
                       Stretch="Uniform"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
